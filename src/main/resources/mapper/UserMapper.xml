<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springbootdemo.mapper.UserMapper">
    <select id="getInfo" resultType="com.example.springbootdemo.bean.UserBean">
        select * from user where uname=#{name} and upwd=#{password}
    </select>
    <select id="selectU" resultType="com.example.springbootdemo.bean.UserBean">
        select * from user;
    </select>
    <insert id="addU">
        insert into user(id,uname,upwd) values(#{num},#{uname},#{upwd});
    </insert>
</mapper>